<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/login"
    tools:context=".view.activity.RegisterActivity">
    <ImageView
        android:layout_width="@dimen/dp_64"
        android:src="@mipmap/logo_xhdpi"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_height="@dimen/dp_64"></ImageView>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/register_icon_name_n_xxhdpi"></ImageView>

        <EditText
            android:id="@+id/register_name"
            android:layout_width="match_parent"
            android:hint="昵称"
            android:paddingLeft="@dimen/dp_5"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/login_icon_phone_n_hdpi"></ImageView>

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:hint="手机号"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:paddingLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/login_icon_lock_n_hdpi">
        </ImageView>

        <EditText
            android:id="@+id/register_pwd"
            android:layout_width="match_parent"
            android:hint="登录密码"
            android:textColor="#eeeeee"
            android:paddingLeft="@dimen/dp_5"
            android:textColorHint="#eeeeee"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <TextView
        android:id="@+id/sms_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="短信验证登录"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:textColor="#ffffff"></TextView>
    <Button
        android:id="@+id/register_bt"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="注册"
        android:textSize="18dp"
        android:background="@drawable/style_login_btn"
        android:layout_marginTop="150dp"
        android:textColor="#ffffff"></Button>
</LinearLayout>