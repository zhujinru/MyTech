<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.fragment.ConsultFragment">

    <RelativeLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/consult_fenlei"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/home_nav_btn_menu_n_xhdpi" />
        <ImageView
            android:id="@+id/consult_sousuo"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_3"
            android:background="@drawable/common_nav_btn_search_n_xhdpi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="资讯"
            android:textColor="#000000"
            android:textSize="@dimen/dp_20"></TextView>
    </RelativeLayout>
  <com.youth.banner.Banner
      android:id="@+id/consult_banner"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_99"
      />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cunsult_recyecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>