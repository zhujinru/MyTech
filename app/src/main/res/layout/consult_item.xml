<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/consult_item_image"
        android:layout_width="@dimen/dp_99"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@color/colorAccent" />

    <ImageView
        android:id="@+id/consult_hongxin_image"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_alignBottom="@id/consult_item_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_toRightOf="@id/consult_item_time"
        android:src="@drawable/conslt_hongxin_1" />

    <ImageView
        android:id="@+id/consult_share_image"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_alignBottom="@id/consult_hongxin_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/conslt_share" />

    <TextView
        android:id="@+id/consult_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/consult_item_image"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@id/consult_item_image"
        android:text="1999年12月21日"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/consult_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@id/consult_item_image"
        android:text="标题"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/consult_item_neirong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/consult_item_name"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_toRightOf="@id/consult_item_image"
        android:text="国之强大，牛"
        android:textSize="@dimen/dp_12" />
</RelativeLayout>