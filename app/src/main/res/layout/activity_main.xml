<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".view.activity.MainActivity">




            <LinearLayout
                android:id="@+id/cont"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/vp"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:id="@+id/rg"
                    android:orientation="horizontal"
                    android:layout_height="60dp">
                    <RadioButton
                        android:id="@+id/rb1"
                        android:layout_width="0dp"
                        android:drawableTop="@drawable/rg1"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="资讯"
                        android:gravity="center"
                        android:button="@null"
                        />
                    <RadioButton
                        android:id="@+id/rb2"
                        android:drawableTop="@drawable/rg2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="消息"
                        android:gravity="center"
                        android:button="@null"
                        />
                    <RadioButton
                        android:id="@+id/rb3"
                        android:drawableTop="@drawable/rg3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="社区"
                        android:button="@null"
                        />
                </RadioGroup>
            </LinearLayout>
  <RelativeLayout
      android:id="@+id/menu"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="left">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:id="@+id/ll"
          android:background="@mipmap/bg"
          android:gravity="center"
          android:layout_height="match_parent">
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/cc"
              android:padding="@dimen/dp_6"
              android:id="@+id/login_iv"
              android:src="@drawable/login_icon_n_xxhdpi"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dp_20"
              android:id="@+id/login"
              android:text="登录/注册"
              android:textSize="@dimen/sp_14"
              android:textColor="#fff"/>
      </LinearLayout>
      <RelativeLayout
          android:visibility="gone"
          android:layout_width="match_parent"
          android:id="@+id/rl"
          android:background="#ffffff"
          android:layout_height="match_parent">
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_160"
              android:src="@mipmap/bg"
              android:id="@+id/bgz"
              android:adjustViewBounds="true"
              android:scaleType="fitXY"/>
          <ImageView
              android:layout_width="@dimen/dp_60"
              android:layout_height="@dimen/dp_60"
              android:id="@+id/headPic"
              android:layout_marginLeft="@dimen/dp_20"
              android:layout_marginTop="@dimen/dp_60"
              android:src="@mipmap/ic_launcher"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="诗和远方"
              android:id="@+id/name"
              android:layout_marginTop="@dimen/dp_90"
              android:layout_marginLeft="@dimen/dp_120"
              android:textSize="@dimen/sp_14"
              android:textColor="#fff"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="诗和远方"
              android:id="@+id/dersign"
              android:layout_marginTop="@dimen/dp_130"
              android:layout_marginLeft="@dimen/dp_120"
              android:textSize="@dimen/sp_14"
              android:textColor="#fff"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_below="@id/bgz"
              android:orientation="vertical"
              android:layout_height="match_parent">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:id="@+id/shou"
                  android:gravity="center_vertical"
                  android:layout_marginLeft="@dimen/dp_16"
                  android:layout_marginTop="@dimen/dp_16"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="@dimen/dp_15"
                      android:layout_height="@dimen/dp_15"
                      android:src="@drawable/my_icon_collect_n_xxhdpi"
                      />
                  <TextView
                      android:id="@+id/text_shoucang"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="我的收藏"
                      android:textSize="@dimen/sp_14"
                      android:layout_marginLeft="@dimen/dp_12"
                      />
                  <ImageView
                      android:layout_width="@dimen/dp_10"
                      android:layout_height="@dimen/dp_10"
                      android:layout_marginLeft="@dimen/dp_190"
                      android:src="@drawable/my_icon_next_n_xxhdpi"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:id="@+id/guan"
                  android:gravity="center_vertical"
                  android:layout_marginTop="@dimen/dp_20"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="@dimen/dp_15"
                      android:layout_height="@dimen/dp_15"
                      android:src="@drawable/my_icon_attention_n_xxhdpi"
                      android:layout_marginLeft="@dimen/dp_16"
                      />
                  <TextView
                      android:id="@+id/text_guanzhu"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="我的关注"
                      android:textSize="@dimen/sp_14"
                      android:layout_marginLeft="@dimen/dp_12"
                      />
                  <ImageView
                      android:layout_width="@dimen/dp_10"
                      android:layout_height="@dimen/dp_10"
                      android:layout_marginLeft="@dimen/dp_190"
                      android:src="@drawable/my_icon_next_n_xxhdpi"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:id="@+id/tie"
                  android:gravity="center_vertical"
                  android:layout_marginTop="@dimen/dp_20"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="@dimen/dp_15"
                      android:layout_height="@dimen/dp_15"
                      android:src="@drawable/my_icon_card_n_xxhdpi"
                      android:layout_marginLeft="@dimen/dp_16"
                      />
                  <TextView
                      android:id="@+id/text_tiezi"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="我的帖子"
                      android:textSize="@dimen/sp_14"
                      android:layout_marginLeft="@dimen/dp_12"
                      />
                  <ImageView
                      android:layout_width="@dimen/dp_10"
                      android:layout_height="@dimen/dp_10"
                      android:layout_marginLeft="@dimen/dp_190"
                      android:src="@drawable/my_icon_next_n_xxhdpi"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:id="@+id/tong"
                  android:gravity="center_vertical"
                  android:layout_marginTop="@dimen/dp_20"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="@dimen/dp_15"
                      android:layout_height="@dimen/dp_15"
                      android:src="@drawable/my_icon_notice_n_xxhdpi"
                      android:layout_marginLeft="@dimen/dp_16"
                      />
                  <TextView
                      android:id="@+id/text_tongzhi"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="我的通知"
                      android:textSize="@dimen/sp_14"
                      android:layout_marginLeft="@dimen/dp_12"
                      />
                  <ImageView
                      android:layout_width="@dimen/dp_10"
                      android:layout_height="@dimen/dp_10"
                      android:layout_marginLeft="@dimen/dp_190"
                      android:src="@drawable/my_icon_next_n_xxhdpi"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:id="@+id/ji"
                  android:gravity="center_vertical"
                  android:layout_marginTop="@dimen/dp_20"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="@dimen/dp_15"
                      android:layout_height="@dimen/dp_15"
                      android:src="@drawable/my_icon_inotice_n_xxhdpi"
                      android:layout_marginLeft="@dimen/dp_16"
                      />
                  <TextView
                      android:id="@+id/text_jifen"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="我的积分"
                      android:textSize="@dimen/sp_14"
                      android:layout_marginLeft="@dimen/dp_12"
                      />
                  <ImageView
                      android:layout_width="@dimen/dp_10"
                      android:layout_height="@dimen/dp_10"
                      android:layout_marginLeft="@dimen/dp_190"
                      android:src="@drawable/my_icon_next_n_xxhdpi"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:id="@+id/ren"
                  android:gravity="center_vertical"
                  android:layout_marginTop="@dimen/dp_20"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="@dimen/dp_15"
                      android:layout_height="@dimen/dp_15"
                      android:src="@drawable/my_icon_task_n_xxhdpi"
                      android:layout_marginLeft="@dimen/dp_16"
                      />
                  <TextView
                      android:id="@+id/text_renwu"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="我的任务"
                      android:textSize="@dimen/sp_14"
                      android:layout_marginLeft="@dimen/dp_12"
                      />
                  <ImageView
                      android:layout_width="@dimen/dp_10"
                      android:layout_height="@dimen/dp_10"
                      android:layout_marginLeft="@dimen/dp_190"
                      android:src="@drawable/my_icon_next_n_xxhdpi"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:id="@+id/she"
                  android:gravity="center_vertical"
                  android:layout_marginTop="@dimen/dp_20"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="@dimen/dp_15"
                      android:layout_height="@dimen/dp_15"
                      android:src="@drawable/my_icon_setting_n_xxhdpi"
                      android:layout_marginLeft="@dimen/dp_16"
                      />
                  <TextView
                      android:id="@+id/text_shezhi"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="我的设置"
                      android:textSize="@dimen/sp_14"
                      android:layout_marginLeft="@dimen/dp_12"
                      />
                  <ImageView
                      android:layout_width="@dimen/dp_10"
                      android:layout_height="@dimen/dp_10"
                      android:layout_marginLeft="@dimen/dp_190"
                      android:src="@drawable/my_icon_next_n_xxhdpi"/>
              </LinearLayout>

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="八维移动通信学院毕业作品"
                  android:gravity="center"
                  android:textSize="@dimen/sp_12"
                  android:layout_marginTop="@dimen/dp_155"/>
          </LinearLayout>
      </RelativeLayout>
  </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>