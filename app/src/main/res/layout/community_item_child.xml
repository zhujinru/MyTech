<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_12"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/com_item_image"
            android:layout_width="@dimen/dp_50"
            android:src="@mipmap/ic_launcher_round"
            android:layout_height="@dimen/dp_50" />
        <TextView
            android:id="@+id/com_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_60"
            android:text="花花公子"/>
        <TextView
            android:id="@+id/com_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爱是一道光"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/com_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12小时前"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/com_item_name"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/com_item_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帖子内容"
        android:layout_marginLeft="@dimen/dp_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/im_ll"
        android:layout_height="@dimen/dp_100">
        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:id="@+id/file"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/com_item_pl"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_170"
            android:src="@drawable/common_icon_comment_n_hdpi"/>
        <TextView
            android:id="@+id/com_item_pl_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_200"
            android:text="0" />
        <ImageView
            android:id="@+id/com_item_zan"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_70"
            android:background="@drawable/common_icon_prise_n_hdpi"

            android:layout_marginLeft="@dimen/dp_20"/>
        <TextView
            android:id="@+id/com_item_zan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_50"
            android:text="1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@color/colorW"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:id="@+id/pl_rc"
                android:visibility="gone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:text="没有更多评论了"
                android:id="@+id/pl_null"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>